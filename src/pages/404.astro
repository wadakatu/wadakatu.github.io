  <canvas id="matrix-rain" aria-hidden="true"></canvas>

  <main id="main-content" class="container" role="main">
    <!-- Glitchy 404 -->
    <div class="glitch-wrapper">
      <h1 class="glitch" aria-label="404 Error">404</h1>
    </div>

    <p class="subtitle">Page Not Found</p>

    <!-- Terminal -->
    <div class="terminal" role="region" aria-label="Error details">
      <div class="terminal-header" aria-hidden="true">
        <div class="terminal-dots">
          <span class="terminal-dot red"></span>
          <span class="terminal-dot yellow"></span>
          <span class="terminal-dot green"></span>
        </div>
        <span class="terminal-title">system — error.log</span>
      </div>
      <div class="terminal-body">
        <p class="terminal-line"><span class="prompt">></span> <span class="dim">Searching for</span> <span class="path">requested_path</span><span class="dim">...</span></p>
        <p class="terminal-line"><span class="error">ERROR:</span> The path you seek does not exist in this reality.</p>
        <p class="terminal-line"><span class="prompt">></span> <span class="cursor" aria-hidden="true"></span></p>
      </div>
    </div>

    <!-- The Choice -->
    <section class="choice-section" aria-labelledby="choice-heading">
      <h2 id="choice-heading" class="sr-only">Make your choice</h2>
      <p class="morpheus-quote">
        "This is your last chance. After this, there is no turning back."
      </p>
