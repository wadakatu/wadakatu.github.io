          <div class="pill-capsule" aria-hidden="true"></div>
          <span class="pill-label">Red Pill</span>
          <span class="pill-desc">Return to reality</span>
        </a>

        <a href="https://www.google.com" class="pill-link blue" rel="noopener noreferrer" aria-label="Take the blue pill and go to Google">
          <div class="pill-capsule" aria-hidden="true"></div>
          <span class="pill-label">Blue Pill</span>
          <span class="pill-desc">Stay in the dream</span>
        </a>
      </nav>
    </section>
  </main>

  <script is:inline>
    // Matrix Rain Effect
    const canvas = document.getElementById('matrix-rain');
    const ctx = canvas.getContext('2d');

    function resize() {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight;
    }
    resize();
    window.addEventListener('resize', resize);

    const chars = 'アイウエオカキクケコサシスセソタチツテトナニヌネノハヒフヘホマミムメモヤユヨラリルレロワヲン0123456789';
    const charArray = chars.split('');
    const fontSize = 14;
    let columns = Math.floor(canvas.width / fontSize);
    let drops = Array(columns).fill(0).map(() => Math.random() * -100);

    function draw() {
      ctx.fillStyle = 'rgba(10, 10, 10, 0.04)';
      ctx.fillRect(0, 0, canvas.width, canvas.height);

      ctx.font = fontSize + 'px JetBrains Mono, monospace';

      for (let i = 0; i < drops.length; i++) {
        const char = charArray[Math.floor(Math.random() * charArray.length)];

        const intensity = Math.random();
        if (intensity > 0.95) {
          ctx.fillStyle = '#ffffff';
        } else if (intensity > 0.8) {
          ctx.fillStyle = '#00ff41';
        } else {
          ctx.fillStyle = 'rgba(0, 255, 65, 0.6)';
        }

        ctx.fillText(char, i * fontSize, drops[i] * fontSize);

        if (drops[i] * fontSize > canvas.height && Math.random() > 0.975) {
          drops[i] = 0;
        }
        drops[i]++;
      }
    }

    const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
    if (!prefersReducedMotion) {
      setInterval(draw, 50);
    }

    window.addEventListener('resize', () => {
      resize();
      columns = Math.floor(canvas.width / fontSize);
      drops = Array(columns).fill(0).map(() => Math.random() * -100);
    });
  </script>

  <noscript>
    <style>
      #matrix-rain { display: none; }
      body::before, body::after { display: none; }
      .glitch-wrapper, .subtitle, .terminal, .choice-section, .terminal-line {
        opacity: 1;
        transform: none;
      }
      .glitch::before, .glitch::after { display: none; }
      .cursor { animation: none; opacity: 1; }
    </style>
  </noscript>
</body>
</html>

<style>
  :root {
    --bg: #0a0a0a;
    --card: #0f0f0f;
    --text: #e0e0e0;
    --text-dim: #888888;
    --matrix: #00ff41;
    --matrix-dim: #00aa2a;
    --red-pill: #e63946;
    --red-dark: #9d0208;
    --red-glow: rgba(230, 57, 70, 0.5);
    --blue-pill: #4895ef;
    --blue-dark: #3a0ca3;
    --blue-glow: rgba(72, 149, 239, 0.5);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Outfit', sans-serif;
    background: var(--bg);
    color: var(--text);
    min-height: 100vh;
    overflow-x: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  body::before {
    content: '';
    position: fixed;
    inset: 0;
    background: repeating-linear-gradient(
      0deg,
      transparent,
      transparent 2px,
      rgba(0, 0, 0, 0.08) 2px,
      rgba(0, 0, 0, 0.08) 4px
    );
    pointer-events: none;
    z-index: 1000;
  }

  body::after {
    content: '';
    position: fixed;
    inset: 0;
    background: radial-gradient(ellipse at center, transparent 0%, transparent 50%, rgba(0,0,0,0.4) 100%);
    pointer-events: none;
    z-index: 999;
  }

  #matrix-rain {
    position: fixed;
    inset: 0;
    z-index: 0;
    opacity: 0.1;
  }

  .container {
    position: relative;
    z-index: 10;
    text-align: center;
    padding: 2rem;
    max-width: 800px;
    width: 100%;
  }

  .glitch-wrapper {
    margin-bottom: 0.5rem;
    opacity: 0;
    animation: fadeIn 0.8s ease-out 0.2s forwards;
  }

  .glitch {
    font-family: 'JetBrains Mono', monospace;
    font-size: clamp(5rem, 20vw, 10rem);
    font-weight: 700;
    color: var(--matrix);
    text-shadow:
      0 0 10px var(--matrix),
      0 0 40px rgba(0, 255, 65, 0.4),
      0 0 80px rgba(0, 255, 65, 0.2);
    position: relative;
    display: inline-block;
    letter-spacing: 0.1em;
  }

  .glitch::before,
  .glitch::after {
    content: '404';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.8;
  }

  .glitch::before {
    color: var(--red-pill);
    animation: glitch-1 3s infinite linear alternate-reverse;
    clip-path: polygon(0 0, 100% 0, 100% 33%, 0 33%);
    text-shadow: none;
  }

  .glitch::after {
    color: var(--blue-pill);
    animation: glitch-2 2s infinite linear alternate-reverse;
    clip-path: polygon(0 67%, 100% 67%, 100% 100%, 0 100%);
    text-shadow: none;
  }

  @keyframes glitch-1 {
    0%, 100% { transform: translate(0); }
    10% { transform: translate(-2px, 2px); }
    20% { transform: translate(2px, -2px); }
    30% { transform: translate(-2px, -2px); }
    40% { transform: translate(2px, 2px); }
    50% { transform: translate(-2px, 2px); }
    60% { transform: translate(2px, -2px); }
    70% { transform: translate(-2px, -2px); }
    80% { transform: translate(2px, 2px); }
    90% { transform: translate(-2px, 2px); }
  }

  @keyframes glitch-2 {
    0%, 100% { transform: translate(0); }
    15% { transform: translate(2px, -2px); }
    30% { transform: translate(-2px, 2px); }
    45% { transform: translate(2px, 2px); }
    60% { transform: translate(-2px, -2px); }
    75% { transform: translate(2px, 2px); }
    90% { transform: translate(-2px, -2px); }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .subtitle {
    font-family: 'JetBrains Mono', monospace;
    font-size: 1rem;
    color: var(--text-dim);
    margin-bottom: 3rem;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    opacity: 0;
    animation: fadeIn 0.8s ease-out 0.6s forwards;
  }

  .terminal {
    background: rgba(15, 15, 15, 0.9);
    border: 1px solid rgba(0, 255, 65, 0.2);
    border-radius: 12px;
    overflow: hidden;
    margin-bottom: 3rem;
    box-shadow:
      0 0 0 1px rgba(0, 255, 65, 0.1),
      0 20px 60px rgba(0, 0, 0, 0.5),
      0 0 100px rgba(0, 255, 65, 0.05);
    opacity: 0;
    transform: translateY(20px);
    animation: fadeUp 0.8s ease-out 1s forwards;
    backdrop-filter: blur(10px);
  }

  .terminal-header {
    background: rgba(26, 26, 26, 0.8);
    padding: 0.875rem 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .terminal-dots {
    display: flex;
    gap: 6px;
  }

  .terminal-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .terminal-dot.red { background: #ff5f56; }
  .terminal-dot.yellow { background: #ffbd2e; }
  .terminal-dot.green { background: #27ca40; }

  .terminal-title {
    flex: 1;
    text-align: center;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: var(--text-dim);
  }

  .terminal-body {
    padding: 1.5rem;
    text-align: left;
  }

  .terminal-line {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.85rem;
    line-height: 2;
    opacity: 0;
    animation: typeLine 0.4s ease-out forwards;
  }

  .terminal-line:nth-child(1) { animation-delay: 1.5s; }
  .terminal-line:nth-child(2) { animation-delay: 2s; }
  .terminal-line:nth-child(3) { animation-delay: 2.5s; }

  .prompt { color: var(--matrix); }
  .error { color: var(--red-pill); }
  .path { color: var(--blue-pill); }
  .dim { color: var(--text-dim); }

  .cursor {
    display: inline-block;
    width: 10px;
    height: 1.1em;
    background: var(--matrix);
    margin-left: 2px;
    vertical-align: text-bottom;
    animation: blink 1s step-end infinite;
    box-shadow: 0 0 10px var(--matrix);
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }

  @keyframes typeLine {
    from {
      opacity: 0;
      transform: translateX(-10px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .choice-section {
    opacity: 0;
    animation: fadeUp 1s ease-out 3s forwards;
  }

  .morpheus-quote {
    font-size: 1.1rem;
    color: var(--text);
    margin-bottom: 1rem;
    line-height: 1.6;
    font-style: italic;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .morpheus-name {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.75rem;
    color: var(--matrix);
    letter-spacing: 0.2em;
    text-transform: uppercase;
    margin-bottom: 2.5rem;
  }

  .pills {
    display: flex;
    justify-content: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .pill-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    color: inherit;
    padding: 2rem;
    border-radius: 20px;
    background: rgba(15, 15, 15, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.05);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    backdrop-filter: blur(10px);
  }

  .pill-link:focus {
    outline: none;
  }

  .pill-link:focus-visible {
    outline: 2px solid var(--matrix);
    outline-offset: 4px;
  }

  .pill-capsule {
    width: 120px;
    height: 50px;
    border-radius: 25px;
    position: relative;
    margin-bottom: 1.25rem;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    overflow: hidden;
  }

  .pill-capsule::before {
    content: '';
    position: absolute;
    top: 8px;
    left: 15px;
    right: 15px;
    height: 12px;
    background: linear-gradient(180deg, rgba(255,255,255,0.5) 0%, rgba(255,255,255,0.1) 100%);
    border-radius: 10px;
    filter: blur(1px);
  }

  .pill-capsule::after {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    width: 2px;
    height: 100%;
    background: rgba(0, 0, 0, 0.3);
    transform: translateX(-50%);
  }

  .pill-link.red .pill-capsule {
    background: linear-gradient(180deg,
      #ff6b6b 0%,
      var(--red-pill) 30%,
      var(--red-dark) 100%
    );
    box-shadow:
      0 10px 30px rgba(230, 57, 70, 0.3),
      inset 0 -5px 20px rgba(0, 0, 0, 0.3);
  }

  .pill-link.red:hover .pill-capsule,
  .pill-link.red:focus-visible .pill-capsule {
    transform: scale(1.1) rotate(-3deg);
    box-shadow:
      0 15px 50px var(--red-glow),
      0 0 80px var(--red-glow),
      inset 0 -5px 20px rgba(0, 0, 0, 0.3);
  }

  .pill-link.red:hover,
  .pill-link.red:focus-visible {
    border-color: var(--red-pill);
    background: rgba(230, 57, 70, 0.1);
    transform: translateY(-5px);
  }

  .pill-link.blue .pill-capsule {
    background: linear-gradient(180deg,
      #74c0fc 0%,
      var(--blue-pill) 30%,
      var(--blue-dark) 100%
    );
    box-shadow:
      0 10px 30px rgba(72, 149, 239, 0.3),
      inset 0 -5px 20px rgba(0, 0, 0, 0.3);
  }

  .pill-link.blue:hover .pill-capsule,
  .pill-link.blue:focus-visible .pill-capsule {
    transform: scale(1.1) rotate(3deg);
    box-shadow:
      0 15px 50px var(--blue-glow),
      0 0 80px var(--blue-glow),
      inset 0 -5px 20px rgba(0, 0, 0, 0.3);
  }

  .pill-link.blue:hover,
  .pill-link.blue:focus-visible {
    border-color: var(--blue-pill);
    background: rgba(72, 149, 239, 0.1);
    transform: translateY(-5px);
  }

  .pill-label {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 0.5rem;
    transition: all 0.3s ease;
  }

  .pill-link.red .pill-label { color: var(--red-pill); }
  .pill-link.blue .pill-label { color: var(--blue-pill); }

  .pill-link:hover .pill-label,
  .pill-link:focus-visible .pill-label {
    text-shadow: 0 0 20px currentColor;
  }

  .pill-desc {
    font-size: 0.8rem;
    color: var(--text-dim);
    transition: color 0.3s ease;
  }

  .pill-link:hover .pill-desc,
  .pill-link:focus-visible .pill-desc {
    color: var(--text);
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  .skip-link {
    position: absolute;
    top: -100%;
    left: 50%;
    transform: translateX(-50%);
    background: var(--matrix);
    color: var(--bg);
    padding: 0.75rem 1.5rem;
    border-radius: 0 0 8px 8px;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.85rem;
    font-weight: 600;
    text-decoration: none;
    z-index: 10001;
    transition: top 0.3s ease;
  }

  .skip-link:focus {
    top: 0;
    outline: 2px solid var(--text);
    outline-offset: 2px;
  }

  @media (max-width: 600px) {
    .container {
      padding: 1.5rem;
    }

    .pills {
      gap: 1.5rem;
    }

    .pill-link {
      padding: 1.5rem;
      width: 100%;
      max-width: 200px;
    }

    .pill-capsule {
      width: 100px;
      height: 42px;
      border-radius: 21px;
    }

    .morpheus-quote {
      font-size: 1rem;
    }

    .terminal-body {
      padding: 1rem;
    }

    .terminal-line {
      font-size: 0.75rem;
    }

    .subtitle {
      font-size: 0.8rem;
      letter-spacing: 0.2em;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }

    .terminal,
    .choice-section,
    .glitch-wrapper,
    .subtitle,
    .terminal-line {
      opacity: 1;
      transform: none;
    }

    .cursor {
      animation: none;
      opacity: 1;
    }

    .glitch::before,
    .glitch::after {
      display: none;
    }

    #matrix-rain {
      display: none;
    }

    body::before {
      display: none;
    }
  }
</style>
