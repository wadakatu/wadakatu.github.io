---
import BaseLayout from '@layouts/BaseLayout.astro';

const title = 'Blog';
const description = 'Tech articles and learnings by wadakatu - Laravel, TypeScript, and web development.';

const jsonLd = [
  {
    "@context": "https://schema.org",
    "@type": "CollectionPage",
    "@id": "https://www.wadakatu.dev/blog/#page",
    "name": "Blog | wadakatu",
    "description": description,
    "url": "https://www.wadakatu.dev/blog/",
    "author": {
      "@id": "https://www.wadakatu.dev/#person"
    }
  },
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Home",
        "item": "https://www.wadakatu.dev/"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Blog"
      }
    ]
  }
];
---

<BaseLayout title={title} description={description} lang="ja" jsonLd={jsonLd}>
  <Fragment slot="head">
    <link rel="stylesheet" href="/styles/common.css">
    <link rel="alternate" type="application/rss+xml" title="wadakatu Blog RSS Feed" href="https://www.wadakatu.dev/feed.xml">
    <link rel="alternate" type="application/atom+xml" title="wadakatu Blog Atom Feed" href="https://www.wadakatu.dev/atom.xml">
  </Fragment>

  <a href="#main-content" class="skip-link">Skip to main content</a>
  <canvas id="matrix-rain" aria-hidden="true"></canvas>

  <div class="container">
    <header class="page-header">
      <a href="/" class="back-link">
        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        cd ..
      </a>
      <h1 class="page-title">Blog<span class="highlight">_</span></h1>
    </header>

    <main id="main-content" class="blog-content">
      <!-- Stats Header -->
      <div class="blog-stats">
        <div class="stats-info">
          <span class="stats-count" id="article-count">-- articles</span>
          <span class="stats-label">Published on Zenn</span>
        </div>
        <a href="https://zenn.dev/wadakatu" target="_blank" class="zenn-badge">
          <svg viewBox="0 0 24 24" fill="currentColor">
            <path d="M.264 23.771h4.984c.264 0 .498-.147.645-.352L19.614.874c.176-.293-.029-.645-.381-.645h-4.72c-.235 0-.44.117-.557.323L.03 23.361c-.088.176.029.41.234.41zM17.445 23.419l6.479-10.408c.205-.323-.029-.733-.41-.733h-4.691c-.176 0-.352.088-.44.235l-6.655 10.643c-.176.264.029.616.352.616h4.779c.234-.001.468-.118.586-.353z"/>
          </svg>
          Zenn Profile
        </a>
        <a href="/feed.xml" class="zenn-badge" title="Subscribe via RSS">
          <svg viewBox="0 0 24 24" fill="currentColor" width="14" height="14">
            <path d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1z"/>
          </svg>
          RSS
        </a>
      </div>

      <!-- Category Tabs -->
      <section class="category-section">
        <div class="section-header">
          <h2 class="section-title">ls ./categories</h2>
          <div class="section-line"></div>
        </div>
        <div class="category-tabs">
          <button class="category-tab active" data-category="All">All</button>
          <button class="category-tab" data-category="Tech">Tech</button>
          <button class="category-tab" data-category="Life">Life</button>
        </div>
      </section>

      <!-- Articles List -->
      <section class="articles-list" id="articles-container">
        <div class="loading">Loading articles</div>
      </section>
    </main>

    <footer class="footer">
      <div class="footer-brand">
        <img src="/images/logo-48.webp" alt="wadakatu logo" class="footer-logo" width="48" height="48">
        <div class="footer-info">
          <span class="footer-name">wadakatu_</span>
          <a href="https://chisatosatoh.myportfolio.com/work" target="_blank" class="footer-credit">Logo by Chisato Satoh</a>
        </div>
      </div>
      <div class="footer-status">
        <div class="uplink">
          <span class="uplink-dot"></span>
          <span>UPLINK ACTIVE</span>
        </div>
        <span class="footer-time" id="jst-time">--:--:-- JST</span>
      </div>
    </footer>
  </div>

  <Fragment slot="scripts">
    <script is:inline src="/scripts/blog.js"></script>
  </Fragment>

  <noscript>
    <style>
      #matrix-rain { display: none; }
      body::before { display: none; }
      .page-header, .blog-stats, .category-section, .articles-list, .footer {
        opacity: 1;
        transform: none;
      }
      .loading { display: none; }
      #articles-container::before {
        content: 'JavaScript is required to load articles. Please enable JavaScript or visit Zenn directly.';
        display: block;
        padding: 2rem;
        text-align: center;
        color: var(--text-dim);
        font-family: 'JetBrains Mono', monospace;
      }
    </style>
  </noscript>
</BaseLayout>

<style>
  /* ===== BLOG PAGE STYLES ===== */

  .blog-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  /* Stats Header */
  .blog-stats {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.5rem;
    background: var(--card);
    border: 1px solid var(--border);
    border-radius: 8px;
  }

  .stats-info {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .stats-count {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.85rem;
    color: var(--matrix);
  }

  .stats-label {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.7rem;
    color: var(--text-dim);
  }

  .zenn-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.7rem;
    color: var(--text-dim);
    text-decoration: none;
    padding: 0.4rem 0.75rem;
    border: 1px solid var(--border);
    border-radius: 6px;
    transition: all 0.3s ease;
  }

  .zenn-badge:hover {
    border-color: var(--matrix-dark);
    color: var(--matrix);
  }

  .zenn-badge svg {
    width: 14px;
    height: 14px;
  }

  /* Category Tabs */
  .category-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .section-header {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .section-title {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.85rem;
    color: var(--matrix);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .section-title::before {
    content: '$ ';
    opacity: 0.6;
  }

  .section-line {
    flex: 1;
    height: 1px;
    background: linear-gradient(90deg, var(--matrix-dark), transparent);
  }

  .category-tabs {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .category-tab {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.8rem;
    padding: 0.5rem 1rem;
    border: 1px solid var(--border);
    border-radius: 6px;
    background: transparent;
    color: var(--text-dim);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .category-tab:hover {
    border-color: var(--matrix-dark);
    color: var(--text);
  }

  .category-tab:focus-visible {
    border-color: var(--matrix);
    color: var(--matrix);
    outline: 2px solid var(--matrix);
    outline-offset: 2px;
    box-shadow: var(--glow);
  }

  .category-tab.active {
    border-color: var(--matrix);
    color: var(--matrix);
    background: rgba(0, 255, 65, 0.05);
    box-shadow: var(--glow);
  }

  /* Articles List */
  .articles-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  /* Loading State */
  .loading {
    text-align: center;
    padding: 3rem 2rem;
    font-family: 'JetBrains Mono', monospace;
    color: var(--text-dim);
  }

  .loading::after {
    content: '';
    display: inline-block;
    width: 8px;
    height: 14px;
    background: var(--matrix);
    animation: blink 1s step-end infinite;
    vertical-align: middle;
    margin-left: 4px;
  }

  /* Skip Link */
  .skip-link {
    position: absolute;
    top: -100%;
    left: 50%;
    transform: translateX(-50%);
    background: var(--matrix);
    color: var(--bg);
    padding: 0.75rem 1.5rem;
    border-radius: 0 0 8px 8px;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.85rem;
    font-weight: 600;
    text-decoration: none;
    z-index: 10000;
    transition: top 0.3s ease;
  }

  .skip-link:focus {
    top: 0;
    outline: 2px solid var(--text);
    outline-offset: 2px;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .blog-stats {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }
  }

  /* Animations */
  .blog-stats,
  .category-section,
  .articles-list {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeUp 0.5s ease-out forwards;
  }

  .blog-stats { animation-delay: 0.2s; }
  .category-section { animation-delay: 0.3s; }
  .articles-list { animation-delay: 0.4s; }

  @keyframes fadeUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes blink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }
</style>
