      body::before { display: none; }
      .page-header, .profile-section, .stats-section, .stack-section, .oss-section, .footer {
        opacity: 1;
        transform: none;
      }
    </style>
  </noscript>
</BaseLayout>

<style>
  /* ===== ABOUT PAGE STYLES ===== */

  .about-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
  }

  /* Profile Section */
  .profile-section {
    background: var(--card);
    border: 1px solid var(--border);
    border-radius: 16px;
    padding: 2rem;
    position: relative;
    overflow: hidden;
  }

  .profile-section::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(0, 255, 65, 0.03) 0%, transparent 50%);
    pointer-events: none;
  }

  .profile-header {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .profile-avatar {
    width: 80px;
    height: 80px;
    border-radius: 12px;
    border: 2px solid var(--matrix-dark);
    box-shadow: var(--glow);
  }

  .profile-info {
    flex: 1;
  }

  .profile-name {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.25rem;
  }

  .profile-name .highlight {
    color: var(--matrix);
    text-shadow: var(--glow);
  }

  .profile-role {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.85rem;
    color: var(--matrix-dim);
  }

  .profile-bio {
    position: relative;
    z-index: 1;
  }

  .bio-terminal {
    background: rgba(0, 0, 0, 0.3);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 1rem 1.25rem;
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.85rem;
    line-height: 1.8;
  }

  .bio-line {
    display: block;
    color: var(--text-dim);
  }

  .bio-line .prompt {
    color: var(--matrix);
    margin-right: 0.5rem;
  }

  .bio-line .cmd {
    color: var(--text);
  }

  .bio-line .output {
    color: var(--text-dim);
    padding-left: 1.5rem;
  }

  .bio-line .highlight {
    color: var(--matrix);
  }

  /* Stats Section */
  .stats-section {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
  }

  .stat-card {
    background: var(--card);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1.25rem;
    text-align: center;
    transition: border-color 0.3s ease, box-shadow 0.3s ease, transform 0.3s ease;
    will-change: transform, box-shadow;
    position: relative;
    overflow: hidden;
  }

  .stat-card::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(180deg, rgba(0, 255, 65, 0.05) 0%, transparent 50%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .stat-card:hover {
    border-color: var(--matrix-dark);
    transform: translateY(-2px);
    box-shadow: var(--glow);
  }

  .stat-card:hover::before {
    opacity: 1;
  }

  .stat-value {
    font-family: 'JetBrains Mono', monospace;
    font-size: 2rem;
    font-weight: 700;
    color: var(--matrix);
    text-shadow: var(--glow);
    line-height: 1;
    margin-bottom: 0.5rem;
    position: relative;
    z-index: 1;
  }

  .stat-label {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.65rem;
    color: var(--text-dim);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    position: relative;
    z-index: 1;
  }

  /* Tech Stack Section */
  .stack-section {
    background: var(--card);
    border: 1px solid var(--border);
    border-radius: 16px;
    padding: 1.5rem;
  }

  .stack-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 0.75rem;
  }

  .stack-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 1rem 0.5rem;
    background: rgba(0, 255, 65, 0.03);
    border: 1px solid var(--border);
    border-radius: 10px;
    transition: border-color 0.3s ease, background-color 0.3s ease, box-shadow 0.3s ease, transform 0.3s ease;
    will-change: transform, box-shadow;
  }

  .stack-item:hover {
    border-color: var(--matrix-dark);
    background: rgba(0, 255, 65, 0.08);
    transform: translateY(-3px);
    box-shadow: var(--glow);
  }

  .stack-icon {
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .stack-icon svg {
    width: 28px;
    height: 28px;
    fill: currentColor;
    color: var(--matrix-dim);
    transition: color 0.3s ease;
  }

  .stack-item:hover .stack-icon svg {
    color: var(--matrix);
  }

  .stack-name {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.7rem;
    color: var(--text-dim);
    transition: color 0.3s ease;
  }

  .stack-item:hover .stack-name {
    color: var(--text);
  }

  /* OSS Projects Section */
  .oss-section {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .oss-card {
    background: var(--card);
