      <!-- OSS Projects Section -->
      <section class="oss-section">
        <a href="https://docs.laravel-spectrum.dev" target="_blank" class="oss-card">
          <div class="oss-header">
            <div class="oss-icon">&#127752;</div>
            <h3 class="oss-name">laravel-spectrum</h3>
          </div>
          <p class="oss-desc">A powerful testing utility for Laravel applications with beautiful output.</p>
          <div class="oss-tags">
            <span class="oss-tag">#laravel</span>
